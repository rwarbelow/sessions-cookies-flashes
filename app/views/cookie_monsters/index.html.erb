<h1>Welcome, Cookie Monsters!</h1>

<h4>Here are your cookies:</h4>

<table class="table">
  <thead>
    <th>Key</th>
    <th>Value</th>
  </thead>
<% @cookies.each do |key, value| %>
  <tr>
    <td><%= link_to "Delete", cookie_monsters_path(key: key), method: :delete %></td>
    <td><%= key %></td>
    <td><%= value %></td>
  </tr>
<% end %>
</table>
<%= link_to "Set a Cookie", new_cookie_monster_path %>